%---- Sin Upper Bounds Definitions (Super Extended)

%-- Upper bounds (n=7)

% sineven(X,7)
% accurate to .094 for x = -12.3 .. 0
cnf(sin_upper_bound_7_neg,axiom,
    ( ~ X <= 0
    | ~ lgen(R, X-(1/6)*X^3+(1/120)*X^5-(1/5040)*X^7+(1/362880)*X^9-(1/39916800)*X^11+(1/6227020800)*X^13-(1/1307674368000)*X^15+(1/355687428096000)*X^17-(1/121645100408832000)*X^19+(1/51090942171709440000)*X^21-(1/25852016738884976640000)*X^23+(1/15511210043330985984000000)*X^25-(1/10888869450418352160768000000)*X^27+(1/8841761993739701954543616000000)*X^29-(1/8222838654177922817725562880000000)*X^31, Y)
    | lgen(R, sin(X), Y) )).

% sinodd(X,7)
% accurate to .107 for x = 0 .. 11.6
cnf(sin_upper_bound_7_pos,axiom,
    ( ~ 0 <= X
    | ~ lgen(R, X-(1/6)*X^3+(1/120)*X^5-(1/5040)*X^7+(1/362880)*X^9-(1/39916800)*X^11+(1/6227020800)*X^13-(1/1307674368000)*X^15+(1/355687428096000)*X^17-(1/121645100408832000)*X^19+(1/51090942171709440000)*X^21-(1/25852016738884976640000)*X^23+(1/15511210043330985984000000)*X^25-(1/10888869450418352160768000000)*X^27+(1/8841761993739701954543616000000)*X^29, Y)
    | lgen(R, sin(X), Y) )).

